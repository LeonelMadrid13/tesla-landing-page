---
const { title } = Astro.props;
const { image } = Astro.props;
const { color } = Astro.props;
---

<section
    class={`landing-section bg-gray-200 h-screen w-screen text-center relative overflow-hidden text-${color}`}
    data-header-color={color}
>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class="pt-40 text-[40px] font-medium">{title}</h2>
            <a class="text-base underline" href="#"
                >Concertar una prueba de conducci√≥n</a
            >
        </header>
        <footer class="flex flex-col flex-grow justify-end pb-20">
            <div class="gap-x-6 flex mx-auto">
                <a
                    href="#"
                    class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium px-12 py-2 inline-block hover:bg-gray-500 hover:text-black hover:border-gray-500 transition-colors text-white"
                >
                    Explorar inventario</a
                >
                <a
                    href="#"
                    class="border-[3px] border-white bg-white text-sm rounded font-medium px-12 py-2 hover:bg-black hover:text-white hover:border-black transition-colors inline-flex justify-center items-center text-black"
                >
                    Pedido personalizado</a
                >
            </div>
        </footer>
    </div>
    <div
        class="absolute flex top-0 bottom-0 h-full w-full z-10 items-center justify-center"
    >
        <img
            src={image}
            alt={`${image}`}
            class="h-full/2 w-full/2 object-cover object-center"
        />
    </div>
</section>
